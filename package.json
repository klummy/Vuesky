{
  "name": "vuesky",
  "version": "0.0.0",
  "description": "Vuesky is a simple, customizable UI kit for frontend development.",
  "jsnext": "dist/bundle.js",
  "main": "dist/bundle.common.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "purge": "rm -rf dist/",
    "compile": "rollup -c",
